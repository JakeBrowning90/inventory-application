extends layout 

block content 
    h1 Artist Profile: #{title}

    p #{artist.year_of_birth} - #{artist.year_of_death} 
    p #[strong Biography: ] #{artist.bio}

    div(style='margin-left:20px;margin-top:20px')

        h4 Pieces

        dl
        each piece in artist_pieces
            dt
            a(href=piece.url) #{piece.title}

        else
            p This artist has no pieces in the collection.

    hr

    p
        a(href=artist.url+'/delete') Delete artist