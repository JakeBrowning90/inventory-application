extends layout 

block content 
    div(class="backgroundDefault")
        div(class='centeredContent')
            h1(class="defaultSubheading")= title 

            form.formNewArtist(method='POST') 
                div.formSection.wholeRow
                    label(for='first_name') First Name:
                    input(type='text' placeholder='First name' name='first_name' maxlength="30" value=(undefined==artist ? '' : artist.first_name))    
                div.formSection.wholeRow
                    label(for='family_name') *Family Name / Mononym:
                    input#family_name(type='text', placeholder='Family name' name='family_name' maxlength="30" required value=(undefined==artist ? '' : artist.family_name))
                div.formSection
                    label(for='year_of_birth') Year of Birth:
                    input#year_of_birth(type='text', placeholder="1880, c. 950, etc." name='year_of_birth' maxlength="10" value=(undefined==artist ? '' : artist.year_of_birth))
                div.formSection
                    label(for='year_of_death') Year of Death:
                    input#year_of_death(type='text', placeholder="Year of death, or blank if living" maxlength="10" name='year_of_death' value=(undefined==artist ? '' : artist.year_of_death))
                div.formSection.wholeRow
                    label(for='bio') Biography:
                    textarea#bio(rows='5' placeholder="Details about life" maxlength="1000" name='bio' value=(undefined==artist ? '' : artist.bio)) 
                
                button.controlButton.wholeRow(type='submit') Submit

            if errors 
                ul 
                    for error in errors 
                        li!= error.msg